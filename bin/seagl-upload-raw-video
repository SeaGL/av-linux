#!/usr/bin/env bash

set -euo pipefail
set -x

if [ $(id -u) == 0 ]; then
	exec sudo -u seagloperator $0 "$@"
fi

rclone copy /home/seagloperator/RawVideo/ seagl_s3:cloud.seagl.org/seagl$(date +%Y)-raw-videos/$(cat /var/lib/seagl/room-id)/ --min-age=1m --suffix=".conflict.$(date +%s)" --progress --delete-during -v
